@model MiniInventoryManagementSystem.Models.Order

<h1>Place Order</h1>

<form method="post" asp-action="PlaceOrder">
    <div class="form-group">
        <label for="ProductId">Product ID</label>
        <input asp-for="ProductId" type="number" class="form-control" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Place Order</button>
    <a class="btn btn-secondary" href="/Products">Cancel</a>
</form>

@if (ViewBag.Message != null)
{
    <p class="alert alert-info">@ViewBag.Message</p>
}

