@model MiniInventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <div>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>Stock:</strong> @Model.Stock</p>
    </div>

    <form asp-action="Delete" asp-controller="Products" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Products" class="btn btn-secondary">Cancel</a>
    </form>
</div>

